---
import Base from "@/layouts/Base.astro";
---

<Base title="Page Not Found">
  <section class="section text-center" data-aos="fade-in-sm">
    <div class="container mt-24 sm:mt-20">
      <div class="row justify-center">
        <div class="col-12 md:col-8 lg:col-6" data-aos="zoom-in-sm">
          <span
            class="text-[8rem] block font-bold text-text dark:text-darkmode-text-dark"
          >
            404
          </span>
          <h1 class="h2 mb-4" data-aos="fade-up-sm">Page not found</h1>
          <div class="content" data-aos="fade-up-sm">
            <p>
              The page you are looking for might have been removed, had its name
              changed, or is temporarily unavailable.
            </p>
          </div>
          <a href="/" class="btn btn-primary mt-8" data-aos="fade-up-sm">
            Back to home
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>
